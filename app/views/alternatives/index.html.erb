<p id="notice"><%= notice %></p>

<h1>Аналоги</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Товар</th>
      <th>Url</th>
      <th>Xpath</th>
      <th>Значение</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alternatives.each do |alternative| %>
      <tr>
        <td><%= alternative.tovar.name %></td>
        <td><%= alternative.url %></td>
        <td><%= alternative.xpath %></td>
        <td><%= alternative.value %></td>
        <td><%= link_to 'Показать', alternative %></td>
        <td><%= link_to 'Редактировать', edit_alternative_path(alternative) %></td>
        <td><%= link_to 'Удалить', alternative, method: :delete, data: { confirm: 'Подтвердить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_alternative_path, :class => "btn btn-primary" %>
